<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.8" />
    <title>Edit Set</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="pb-8">
    <!-- responsive navbar -->
    <%- include('partials/navbar', {page: ''}) %>
    <div class="flex justify-center">
      <!-- hero component -->
      <div
        class="hero h-screen md:h-96 md:w-3/4 md:m-8 md:rounded-lg"
        style="
          background-image: url('<%= set.img_url %>');
        "
      >
        <div class="hero-overlay bg-opacity-60"></div>
        <div class="hero-content text-center text-neutral-content">
          <div class="max-w-md">
            <h1 class="mb-5 text-5xl font-bold">Edit Set</h1>
            <p class="mb-5">
              <%= set.name %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <!-- form -->
    <div class="container mx-auto">
      <form action="/lego/editSet" method="post">
        <div class="flex justify-center flex-col md:flex-row">
          <div class="m-6">
            <div>
              <label for="name">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                value="<%= set.name %>"
                required
                class="w-full border-2 rounded-md"
              />
            </div>
            <div>
              <label for="year">Year</label>
              <input
                type="number"
                id="year"
                name="year"
                value="<%= set.year %>"
                required
                class="w-full border-2 rounded-md"
              />
            </div>
          </div>
          <div class="m-6">
            <div>
              <label for="num_parts">Number of Parts</label>
              <input
                type="number"
                id="num_parts"
                name="num_parts"
                value="<%= set.num_parts %>"
                required
                class="w-full border-2 rounded-md"
              />
            </div>
            <div>
              <label for="img_url">Image URL</label>
              <input
                type="url"
                id="img_url"
                name="img_url"
                value="<%= set.img_url %>"
                required
                class="w-full border-2 rounded-md"
              />
            </div>
          </div>
          <div class="m-6">
            <div>
              <label for="theme_id">Theme</label>
              <select
                id="theme_id"
                name="theme_id"
                required
                class="w-full border-2 rounded-md"
              >
                <% themes.forEach(theme =>{ %>
                <option value="<%= theme.id %>" <%= theme.id == set.theme_id ? "selected" : "" %>><%= theme.name %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label for="set_num">Set Number</label>
              <input
                type="text"
                id="set_num"
                name="set_num"
                readonly
                value="<%= set.set_num %>"
                required
                class="w-full border-2 rounded-md cursor-not-allowed"
              />
            </div>
          </div>
        </div>
        <div class="container mx-auto">
          <button type="submit" class="btn btn-primary w-full">Update Set</button>
          <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error w-full mt-4">Delete Set</a>
        </div>
      </form>
    </div>
  </body>
</html>
