<!-- responsive navbar -->
<div id="navbar-container" class="px-6 w-full">
  <div class="navbar bg-base-100 md:border-b-4 border-neutral rounded-sm">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"
            />
          </svg>
        </label>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52 border-2 border-primary-focus"
        >
          <% if(session.user){ %>
          <li class="link-primary">
            <details>
              <summary>Account: <%= session.user.userName %></summary>
              <ul class="p-2 right-0">
                <li>
                  <a
                    class="<%= (page == '/lego/addSet') ? 'active': '' %>"
                    href="/lego/addSet"
                    >Add to Collection</a
                  >
                </li>
                <li>
                  <a
                    class="<%= (page == '/userHistory') ? 'active': '' %>"
                    href="/userHistory"
                    >User History</a
                  >
                </li>
                <li>
                  <a href="/logout">Logout</a>
                </li>
              </ul>
            </details>
          </li>
          <% } else { %>
          <li class="link-primary">
            <details>
              <summary>Account</summary>
              <ul class="p-2 right-0">
                <li>
                  <a
                    class="<%= (page == '/login') ? 'active': '' %>"
                    href="/login"
                    >Login</a
                  >
                </li>
                <li>
                  <a
                    class="<%= (page == '/register') ? 'active': '' %>"
                    href="/register"
                    >Register</a
                  >
                </li>
              </ul>
            </details>
          </li>
          <% } %>
          <li>
            <a
              class="<%= (page == '/lego/sets' ? 'link-active' : 'link-primary') %>"
              href="/lego/sets"
              >View Collection</a
            >
          </li>
          <li>
            <a
              class="<%= (page == '/about' ? 'link-active' : 'link-primary') %>"
              href="/about"
              >About</a
            >
          </li>
        </ul>
      </div>
      <a class="btn btn-ghost normal-case text-xl mx-4" href="/"
        >Lego Collection</a
      >
    </div>
    <div class="navbar-end hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <% if(session.user){ %>
        <li class="m-auto">
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 right-0">
              <li>
                <a
                  class="<%= (page == '/lego/addSet') ? 'active': '' %>"
                  href="/lego/addSet"
                  >Add to Collection</a
                >
              </li>
              <li>
                <a
                  class="<%= (page == '/userHistory') ? 'active': '' %>"
                  href="/userHistory"
                  >User History</a
                >
              </li>
              <li>
                <a href="/logout">Logout</a>
              </li>
            </ul>
          </details>
        </li>
        <% } else { %>
        <li class="m-auto">
          <details>
            <summary>Account</summary>
            <ul class="p-2 right-0">
              <li>
                <a
                  class="<%= (page == '/login') ? 'active': '' %>"
                  href="/login"
                  >Login</a
                >
              </li>
              <li>
                <a
                  class="<%= (page == '/register') ? 'active': '' %>"
                  href="/register"
                  >Register</a
                >
              </li>
            </ul>
          </details>
        </li>
        <% } %>
        <li>
          <span
            ><a
              class="btn btn-outline <%= (page == '/lego/sets') ? 'btn-active' : '' %>"
              href="/lego/sets"
              >View Collection</a
            ></span
          >
        </li>
        <li>
          <span
            ><a
              class="btn <%=(page=='/about') ? 'btn-primary' : ''%>"
              href="/about"
              >About</a
            ></span
          >
        </li>
      </ul>
    </div>
  </div>
</div>
